<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.petprotector.PetDetailActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/petDetailsImageView"
        android:layout_width="wrap_content"
        android:layout_height="233dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/none"/>

    <TextView
        android:id="@+id/petDetailsNameTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/petDetailsDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/petDetailsPhoneTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

</LinearLayout>
